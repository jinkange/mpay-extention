{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "Chrome Extension Description",
  "icons": {
    "16": "icon16.png"
  },
  "permissions": ["tabs", "storage", "https://pay.musinsa.com/certify/req"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://pay.musinsa.com/certify/req"],
      "js": ["content.js"]
    }
  ]
}
